<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FlashcardApp.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        d:DesignWidth="800" d:DesignHeight="600"
        x:Class="FlashcardApp.Desktop.Views.ClassFormView"
        x:DataType="vm:ClassFormViewModel"
        xmlns:material="using:Material.Icons.Avalonia"
        xmlns:views="using:FlashcardApp.Desktop.Views"
        Background = "#323232"
        >
    
    <UserControl.Styles>
        <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#363736" />
        </Style>
        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#3D3D3D" />
        </Style>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#414141" /> 
            <Setter Property="BorderBrush" Value="#7D8C97" /> <Setter Property="BorderThickness" Value="2" />
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Styles>


        <Grid Margin="20" RowDefinitions="Auto, *">
        
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <Grid ColumnDefinitions="*, Auto">
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Class form" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Create new of edit existing class" Foreground="#b5b7bb"/>
                </StackPanel>

                <Button Grid.Column="1"    
                        Content="&lt;"
                        Command = "{Binding BackButtonPressedCommand}"
                        FontSize="24"
                        Padding = "0 0 0 2"
                        Width="40" 
                        Height="40"
                        Background="White"
                        Foreground="#323232"
                        CornerRadius="20"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center" /> 
            </Grid>
        </StackPanel>

        <Border Grid.Row="1" Background="#363736" Margin="5" CornerRadius="20" Padding="20" BoxShadow="0 4 15 0 #15000000" >
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" CornerRadius="20" BoxShadow="2 4 4 0 #2c2c2c">
                <Grid ColumnDefinitions = "*, *">
                    <StackPanel Grid.Column = "0" Margin="20">
                        <material:MaterialIcon HorizontalAlignment="Center" Grid.Row="0" Kind="Folder" Width="80" Height="80" Foreground="{Binding ClassHexColor}"/>
                        <TextBlock Text="Class name" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column = "1" Margin="30 0 15 0">
                        <TextBlock Text="Class name" Margin="0 0 0 10" FontSize="20" FontWeight="Bold" Foreground="White" TextTrimming="CharacterEllipsis"/>
                        <TextBox Text = "{Binding ClassName}" Watermark="e.g. Biology" Margin="0 0 0 15" HorizontalAlignment="Stretch" CornerRadius="8"/>
                        
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Colors" Margin="0 0 0 10" FontSize="20" FontWeight="Bold" Foreground="White" TextTrimming="CharacterEllipsis"/>

                            <UniformGrid Columns="5" HorizontalAlignment="Left" Margin="0 0 0 15">
                                <Button Command="{Binding ColorButtonPressedCommand}" CommandParameter="#746882" Background="Transparent" Padding="0" Margin="4" BorderThickness="0">
                                    <Ellipse Width="32" Height="32" Fill="#746882"/>
                                </Button>
                                <Button Command="{Binding ColorButtonPressedCommand}" CommandParameter="#b08aa9" Background="Transparent" Padding="0" Margin="4" BorderThickness="0">
                                    <Ellipse Width="32" Height="32" Fill="#b08aa9"/>
                                </Button>
                                <Button Command="{Binding ColorButtonPressedCommand}" CommandParameter="#7D8C97" Background="Transparent" Padding="0" Margin="4" BorderThickness="0">
                                    <Ellipse Width="32" Height="32" Fill="#7D8C97"/>
                                </Button>
                                <Button Command="{Binding ColorButtonPressedCommand}" CommandParameter="#8FA18F" Background="Transparent" Padding="0" Margin="4" BorderThickness="0">
                                    <Ellipse Width="32" Height="32" Fill="#8FA18F"/>
                                </Button>
                                <Button Command="{Binding ColorButtonPressedCommand}" CommandParameter="#434656" Background="Transparent" Padding="0" Margin="4" BorderThickness="0">
                                    <Ellipse Width="32" Height="32" Fill="#434656"/>
                                </Button>
                            </UniformGrid>

                            <Button Command = "{Binding CreateClassButtonPressedCommand}" Grid.Row="3" Margin="0 0 0 15" Content="Create class" Background="#7D8C97" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Foreground="White" FontWeight="Bold" Padding="10" CornerRadius="10" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

    </Grid>
    
</UserControl>
